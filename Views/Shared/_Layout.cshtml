<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Minha Vaguinha</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sistema_estacionamento.styles.css" asp-append-version="true" />

</head>

<body class="d-flex flex-column h-100">
    <header class="py-3 mb-3 border-bottom">
        <div class="container d-grid gap-3 align-items-center" style="grid-template-columns: 1fr 2fr;">
            <a class="navbar-brand text-dark d-flex align-items-center mb-3 mb-md-0 me-md-auto" asp-controller="Home"
                asp-action="Index">
                <img src="~/parking-lot.png" asp-append-version="true" alt="">
                <span class="ms-3">minha vaguinha</span>
            </a>

            <div class="ms-auto">

                <div class="flex-shrink-0 dropdown">
                    <a href="#" class="d-block btn btn-success text-decoration-none dropdown-toggle"
                        data-bs-toggle="dropdown" aria-expanded="false" id="acoes">
                        <i class="bi bi-plus-lg"></i>
                    </a>
                    <ul class="dropdown-menu text-small shadow">
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Adicionar">Adicionar
                                veículo</a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Veiculos">Listar veículos</a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Encerrar">Encerrar sistema</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-center position-fixed w-100 bottom-0">
        <div class="container my-3 text-muted ">
            &copy; 2023 - Desenvolvido por <a href="https://github.com/livnascimento"
                class="text-decoration-none text-success">Lívia Nascimento</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
