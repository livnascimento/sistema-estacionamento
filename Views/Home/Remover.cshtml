@model sistema_estacionamento.Entities.Veiculo

@{
    ViewData["Title"] = "Remover veículo";
}

<div class="container">
    <div class="d-flex mt-3">
        <div>
            <h3 class="text-secondary">Remover Veículo</h3>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 border rounded shadow mx-auto p-5">
        <div class="card border-0">
            <div class="card-body">
                <div class="row">
                    <dt class="col-sm-4">
                        <dl>
                            @Html.DisplayNameFor(x => x.Placa)
                        </dl>
                    </dt>
                    <dt class="col-sm-6 fw-normal">
                        <dl>
                            @Html.DisplayFor(veiculo => veiculo.Placa)
                        </dl>
                    </dt>
                </div>
                <div class="row">
                    <dt class="col-sm-4">
                        <dl>
                            @Html.DisplayNameFor(veiculo => veiculo.Tipo)
                        </dl>
                    </dt>
                    <dt class="col-sm-6 fw-normal">
                        <dl>
                            @Html.DisplayFor(veiculo => veiculo.Tipo)
                        </dl>
                    </dt>
                </div>
                <div class="text-muted">
                    <hr>
                </div>
                <section class="my-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" name="checkbox" />
                        <label class="form-check-label" for="pago">
                            O cliente já realizou o pagamento do valor @string.Format("{0:#.00}",
                            Convert.ToDecimal(ViewBag.TotalEstacionamento) / 100) referente ao tempo de permanência no
                            estacionamento.
                        </label>
                    </div>
                </section>
                <div class="text-muted">
                    <hr>
                </div>
                <section class="my-3">
                    <p>Lembre-se que esta ação não pode ser desfeita</p>
                </section>
            </div>
            <form asp-action="Remover">
                <input id="btn-remover" value="Remover" type="submit" class="btn btn-danger" disabled>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var checkbox = document.querySelector("input[name=checkbox]");
        var btnRemover = document.querySelector('#btn-remover');

        checkbox.addEventListener('change', function () {
            if (btnRemover) {
                btnRemover.toggleAttribute("disabled");
            }
        });
    });
</script>